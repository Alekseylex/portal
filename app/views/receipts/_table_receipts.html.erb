<!-- Табличка с поступлениями -->

<% if @receipts.present? %>

  <%= content_tag :table, class: :table  do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Дата' %>
        <%= content_tag :th, 'Договір' %>
        <%= content_tag :th, '№ постачання' %>
        <%= content_tag :th, 'Номер 1С' %>
        <%= content_tag :th, '', colspan: 3 %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @receipts.each do |receipt| %>
        <%= content_tag :tr, '', data: { path: "#{ receipts_products_path }?receipt_id=#{ receipt.id }" } do %>
          <%= content_tag :td, date_str( receipt.date ), class: :date_field %>
          <%= content_tag :td, receipt.contract_number, class: :number_field %>
          <%= content_tag :td, receipt.invoice_number, class: :number_field %>
          <%= content_tag :td, receipt.number_sa, class: :number_field %>
          <%= content_tag :td do button_tag '', class: :btn_view, disabled: !receipt.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_edit, disabled: receipt.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_del, disabled: receipt.date_sa, data: { ajax_path: "#{receipts_ajax_delete_receipt_path}?id=#{receipt.id}" } end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>
