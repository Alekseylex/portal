<!-- Табличка с заявками поставщика-->

<% if @supplier_orders.present? %>

  <%= content_tag :table, class: :table  do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Дата' %>
        <%= content_tag :th, 'Замовлення' %>
        <%= content_tag :th, 'Постачальник' %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @supplier_orders.each do |supplier_order| %>
        <%= content_tag :tr, '', data: { ajax_path: "#{ institution_receipts_ajax_filter_contract_numbers_path }?id=
            #{ supplier_order.id }", id: supplier_order.id } do %>
          <%= content_tag :td, date_str(supplier_order.date), class: :date_field %>
          <%= content_tag :td, supplier_order.number, class: :number_field %>
          <%= content_tag :td, supplier_order.supplier.name %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>