<!-- Табличка с поступлениями -->

<% if @receipts.present? %>
  <%= content_tag :table, class: :table, data: { path_view: "#{ institution_receipts_products_path }?id=",
                                                 path_del: "#{ institution_receipts_delete_path }?id=" }  do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Дата', class: :sort, data: { name: :date } %>
        <%= content_tag :th, 'Договір', data: { name: :contract_number } %>
        <%= content_tag :th, '№ постачання', data: { name: :invoice_number } %>
        <%= content_tag :th, 'Номер 1С', data: { name: :number_sa } %>
        <%= content_tag :th, '', colspan: 3 %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @receipts.each do | receipt | %>
        <%= content_tag :tr, data: { id: receipt.id } do %>
          <%= content_tag :td, date_str( receipt.date ), class: :date_field %>
          <%= content_tag :td, receipt.contract_number, class: :number_field %>
          <%= content_tag :td, receipt.invoice_number, class: :number_field %>
          <%= content_tag :td, receipt.number_sa, class: :number_field %>
          <%= content_tag :td do button_tag '', class: :btn_view, disabled: !receipt.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_edit, disabled: receipt.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_del, disabled: receipt.date_sa end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>