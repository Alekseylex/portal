<%= content_tag :main, id: :menu_requirements do %>
  <%= content_tag :h1, "Меню-вимоги" %>

  <%= content_tag :div, class: :panel do %>
    <%= label_tag :date_start, 'З' %>
    <%= content_tag :nav, class: :icon_сalendar do %>
      <%= text_field_tag :date_start, '', readonly: true, placeholder: 'Дата...',
        data: { ajax_path: institution_menu_requirements_ajax_filter_menu_requirements_path } %>
    <% end %>

    <%= label_tag :date_end, 'ПО' %>
    <%= content_tag :nav, class: :icon_сalendar do
      text_field_tag :date_end, '', readonly: true, placeholder: 'Дата...' end %>

    <%= button_tag '', class: [:btn_create, :align_right], id: :create_menu,
          data: { ajax_path: institution_menu_requirements_create_path } %>
  <% end %>

  <%= content_tag :div, id: :table_menu_requirements do
    render( "institution/menu_requirements/table_menu_requirements" ) end %>
<% end %>