//-------------------------------------------------------------
// Фильтрация таблицы меню требования
//-------------------------------------------------------------

$( '#table_menu_requirements' ).empty()
  .append('<%= j render( "institution/menu_requirements/table_menu_requirements" ) %>'); // Рендеринг блока с табличкой

var $table = $( '#table_menu_requirements table' );

/* Если существуют заявки по выбраному фильтру */
if ( $table.length ) {
  $table.tableHeadFixer();  // Фиксируем шапку таблицы
  if ( sessionStorage.menu_requirements_table_scroll ) {
    $( '#table_menu_requirements').scrollTop( sessionStorage.menu_requirements_table_scroll ) };
  if ( sessionStorage.menu_requirements_table_row ) {
    $( '#table_menu_requirements tbody tr:nth-of-type(' +
      sessionStorage.menu_requirements_table_row + ')' ).addClass( 'selected' ) };
} else {
  sessionStorage.removeItem( 'menu_requirements_table_scroll' );
  sessionStorage.removeItem( 'menu_requirements_table_row' );
}