<!-- Табличка с заявками -->
<% if @timesheets.present? %>

  <%= content_tag :table, class: :table  do %>

    <% for i in 1..9 do %>
      <%= content_tag :col %>
    <% end %>

    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Дата' %>
        <%= content_tag :th, 'Номер' %>
        <%= content_tag :th, 'Номер 1С' %>
        <%= content_tag :th, 'Період' %>
        <%= content_tag :th, 'З' %>
        <%= content_tag :th, 'По' %>
        <%= content_tag :th, '', colspan: 3 %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @timesheets.each do |timesheet| %>
        <%= content_tag :tr, '', data: { path_view: "#{institution_timesheets_dates_path}?id=#{timesheet.id}",
                                         path_del: "#{institution_timesheets_delete_timesheet_path}?id=#{timesheet.id}" } do %>
          <%= content_tag :td, date_str( timesheet.date ), class: :date_field %>
          <%= content_tag :td, timesheet.number, class: :number_field %>
          <%= content_tag :td, timesheet.number_sa, class: :number_field %>
          <%= content_tag :td, year_month_names( timesheet.date_eb ) %>
          <%= content_tag :td, date_str( timesheet.date_eb ), class: :date_field %>
          <%= content_tag :td, date_str( timesheet.date_ee ), class: :date_field %>
          <%= content_tag :td do %>
            <%= button_tag '', class: :btn_view, disabled: !timesheet.date_sa %>
          <% end %>
          <%= content_tag :td do %>
            <%= button_tag '', class: :btn_edit, disabled: timesheet.date_sa %>
          <% end %>
          <%= content_tag :td do %>
            <%= button_tag '', class: :btn_del, disabled: timesheet.date_sa %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>