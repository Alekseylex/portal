<!-- Отображение табелей  -->

<%= content_tag :main, id: :timesheets do %>

  <%= content_tag :h1, "Табель" %>

  <%= content_tag :div, '', class: :panel do %>
    <%= label_tag :date_start, 'З' %>
    <%= content_tag :nav, '', class: :icon_сalendar do %>
      <%= text_field_tag :date_start, '', readonly: true, placeholder: 'Дата...',
          data: { ajax_path: institution_timesheets_ajax_filter_timesheets_path } %>
    <% end %>

    <%= label_tag :date_end, 'ПО' %>
    <%= content_tag :nav, '', class: :icon_сalendar do %>
      <%= text_field_tag :date_end, '', readonly: true, placeholder: 'Дата...' %>
    <% end %>

    <%= button_tag '', class: [:btn_create, :align_right], id: :create_timesheet, data: {
      ajax_path: institution_institution_orders_create_path } %>
  <% end %>

  <%= content_tag :div, '', id: :table_timesheets do %>
    <%= render("institution/timesheets/table_timesheets") %>
  <% end %>

<% end %>





