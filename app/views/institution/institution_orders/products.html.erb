<!-- Отображение заявки -->
<%= content_tag :div, id: :institution_order_products do %>
  <%= content_tag :h1, '', data: { text: "Заявка № #{ @institution_order.number } від" } %>

  <%= content_tag :div, id: :panel_main do %>
    <%= content_tag :div, class: :panel do %>
      <%= button_tag '', class: :btn_send, id: :send_sa, disabled: @institution_order.date_sa,
            data: { ajax_path: "#{ institution_institution_orders_send_sa_path }?id=#{ @institution_order.id }" } %>
      <%= button_tag '', class: ( @institution_order.date_sa ? :btn_exit : :btn_save ),
                     onclick: "location.href='#{ institution_institution_orders_index_path }'" %>

      <% if @institution_order.date_sa %>
        <%= label_tag '', 'Надіслано:' %>
        <%= label_tag :number, 'документ' %>
        <%= content_tag :nav, class: :icon_number do
          text_field_tag( :number_sa, @institution_order.number_sa, disabled: true ) end %>
        <%= label_tag :date, 'від' %>
        <%= content_tag :nav, class: :icon_сalendar do
          text_field_tag( :date, date_str( @institution_order.date_sa ), disabled: true ) end %>
      <% end %>
    <% end %>

    <%= content_tag :div, class: :panel do %>
      <%= label_tag :number, 'Заявка № ' %>
      <%= content_tag :nav, class: :icon_number do
        text_field_tag( :number, @institution_order.number, disabled: true ) end %>

      <%= label_tag :date, 'від' %>
      <%= content_tag :nav, class: :icon_сalendar do
        text_field_tag :date, date_str( @institution_order.date ), disabled: @institution_order.date_sa, readonly: true,
        data: { ajax_path: "#{ institution_institution_orders_update_path }?id=#{ @institution_order.id }" } end %>
    <% end %>
  <% end %>

  <% if @institution_order_products %>
    <%= content_tag :h2, "Продукти харчування" %>

    <%= content_tag :div, id: :table_institution_order_products do %>
      <%= content_tag :table, class: :table  do %>

        <% for i in 1..3 do %>
          <%= content_tag :col %>
        <% end %>

        <%= content_tag :thead do %>
          <%= content_tag :tr do %>
            <%= content_tag :th, 'Продукт харчування' %>
            <%= content_tag :th, 'Кількість' %>
            <%= content_tag :th, 'Додаткова інформація' %>
          <% end %>
        <% end %>

        <%= content_tag :tbody do %>
          <% date = '' %>
          <% @institution_order_products.each do | institution_order_product | %>
            <% if date != institution_order_product.date %>
              <% date = institution_order_product.date %>
              <%= content_tag :tr do content_tag( :td, "#{day_of_week( date.wday )} #{date_str( date )}", colspan: 3, class: :row_group ) end %>
            <% end %>

            <%= content_tag :tr do %>
              <%= content_tag :td, institution_order_product.name %>

              <%= content_tag :td do %>
                <% if @institution_order.date_sa.nil? %>
                  <%= text_field_tag :count, f3_to_s( institution_order_product.count ),
                      data: { ajax_path: "#{ institution_institution_orders_product_update_path }?id=
                        #{ institution_order_product.id }" } %>
                <% else %>
                  <%= f3_to_s( institution_order_product.count ) %>
                <% end %>
              <% end %>
              <%= content_tag :td, institution_order_product.description %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

    <% end %>
  <% end %>

<% end %>