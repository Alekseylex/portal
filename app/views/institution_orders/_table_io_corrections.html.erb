<!-- Табличка с заявками -->
<% if @io_corrections.present? %>

  <%= content_tag :table, class: :table, data: { path_view: "#{institution_orders_correction_products_path}?id=",
                                                 path_del: "#{institution_orders_correction_delete_path}?id=" }  do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Дата' %>
        <%= content_tag :th, 'Номер' %>
        <%= content_tag :th, 'Номер 1С' %>
        <%= content_tag :th, '', colspan: 3 %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @io_corrections.each do |io_correction| %>
        <%= content_tag :tr, data: { id: io_correction.id } do %>
          <%= content_tag :td, date_str(io_correction.date), class: :date_field %>
          <%= content_tag :td, io_correction.number, class: :number_field %>
          <%= content_tag :td, io_correction.number_sa, class: :number_field %>
          <%= content_tag :td do button_tag '', class: :btn_view, disabled: !io_correction.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_edit, disabled: io_correction.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_del, disabled: io_correction.date_sa end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>