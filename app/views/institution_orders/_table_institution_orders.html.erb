<!-- Табличка с заявками -->
<% if @institution_orders.present? %>

  <%= content_tag :table, class: :table, data: { path_view: "#{institution_orders_products_path}?id=",
                                                 path_del: "#{institution_orders_delete_path}?id=" }  do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Дата' %>
        <%= content_tag :th, 'Номер' %>
        <%= content_tag :th, 'Номер 1С' %>
        <%= content_tag :th, 'З' %>
        <%= content_tag :th, 'По' %>
        <%= content_tag :th, '', colspan: 3 %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @institution_orders.each do | institution_order | %>
        <%= content_tag :tr, '', data: { id: institution_order.id } do %>
          <%= content_tag :td, date_str( institution_order.date ), class: :date_field %>
          <%= content_tag :td, institution_order.number, class: :number_field %>
          <%= content_tag :td, institution_order.number_sa, class: :number_field %>
          <%= content_tag :td, date_str( institution_order.date_start ), class: :date_field %>
          <%= content_tag :td, date_str( institution_order.date_end ), class: :date_field %>
          <%= content_tag :td do button_tag '', class: :btn_view, disabled: !institution_order.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_edit, disabled: institution_order.date_sa end %>
          <%= content_tag :td do button_tag '', class: :btn_del, disabled: institution_order.date_sa end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>