<!-- Табличка с пользователями -->

<% if @users.present? %>

  <%= content_tag :table, class: :table, data: { path_view: "#{institution_orders_products_path}?id=",
                                                 path_del: "#{institution_orders_delete_path}?id=" }  do %>
    <%= content_tag :thead do %>
      <%= content_tag :tr do %>
        <%= content_tag :th, 'Користувач' %>
        <%= content_tag :th, 'Тип' %>
        <%= content_tag :th, 'Організація' %>
        <%= content_tag :th, 'Дата створення' %>
        <%= content_tag :th, 'Дата оновлення' %>
        <%= content_tag :th, '', colspan: 3 %>
      <% end %>
    <% end %>

    <%= content_tag :tbody do %>
      <% @users.each do | user | %>

        <% if user.userable_type == 'Admin' %>
          <% type="А" %>
          <% organization='Адміністратор' %>
        <% elsif user.userable_type == 'Institution' %>
          <% type="Д" %>
          <% organization = user.institution.name %>
        <% elsif user.userable_type == 'Supplier' %>
          <% type="П" %>
          <% organization = user.supplier.name %>
        <% end %>

        <%= content_tag :tr, '', data: { id: user.id } do %>
          <%= content_tag :td, user.username %>
          <%= content_tag :td, type %>
          <%= content_tag :td, organization %>
          <%= content_tag :td, date_str( user.created_at ), class: :date_field %>
          <%= content_tag :td, date_str( user.updated_at ), class: :date_field %>
          <%= content_tag :td do button_tag '', class: :btn_view end %>
          <%= content_tag :td do button_tag '', class: :btn_edit end %>
          <%= content_tag :td do button_tag '', class: :btn_del, disabled: user.username=='admin' end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>
<% end %>